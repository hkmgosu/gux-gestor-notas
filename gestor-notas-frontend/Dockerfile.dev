# Usar Node.js 18
FROM node:18-alpine

# Instalar dependencias del sistema para desarrollo
RUN apk add --no-cache \
    git \
    libc6-compat

# Establecer directorio de trabajo
WORKDIR /app

# Configurar npm para mejor rendimiento
RUN npm config set fetch-retry-mintimeout 20000 && \
    npm config set fetch-retry-maxtimeout 120000 && \
    npm config set fetch-retries 3

# Copiar archivos de dependencias
COPY package*.json ./

# Instalar dependencias sin ejecutar scripts (evita el prepare)
RUN npm install --ignore-scripts

# Copiar el código fuente
COPY . .

# Para desarrollo, usar root para evitar problemas de permisos con volumes
# En producción se debe usar un usuario no privilegiado
USER root

# Configurar variables de entorno para desarrollo
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1

# Exponer puerto 3000
EXPOSE 3000

# Comando de inicio para desarrollo (con hot reload)
CMD ["npm", "run", "dev"]
